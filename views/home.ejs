<%- include("partials/header") %>

    <h1>Home</h1>
    <h3>
        <%= hContent %>
    </h3>
    <div class="home_container">
        <%post.forEach((e)=>{ %>
            <div class="pst">
                <h2> <%= e.title %></h2>
             <p>
                <% if (e.content.length > 10) { %>
                    <%= e.content.substring(0, 10) + "..." %>
                    <a href="/posts/<%= e.title %>">Read More</a>
                <% } else { %>
                    <%= e.content %>
                <% } %>
            </p>
            </div>
    
        <%}) %>
    </div>

<%- include("partials/footer") %>